# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/vault_smilo?schema=public

# ==========================================
# CLERK AUTHENTICATION
# ==========================================
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_JWT_KEY=your_clerk_jwt_key_here

# ==========================================
# ENCRYPTION
# ==========================================
# Generate a secure 32-byte key using: node generate-key.js
ENCRYPTION_KEY_BASE64=your_base64_encoded_32_byte_key_here

# ==========================================
# API CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3001

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Development: http://localhost:5173
# Production: https://yourdomain.com
# Multiple origins: http://localhost:5173,https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
# Only needed for production build
VITE_API_URL=/api/v1

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth rate limiting (stricter)
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Write operations rate limiting
WRITE_RATE_LIMIT_MAX_REQUESTS=20
